<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.Activities.ProfileActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_view_profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_camera_icon_dark"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="2">

            <Button
                android:id="@+id/button_image_profile"
                android:layout_width="70dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_photo_icon_dark" />

            <Button
                android:id="@+id/button_video_profile"
                android:layout_width="70dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_video_icon_dark" />

            <Button
                android:id="@+id/button_map_profile"
                android:layout_width="70dp"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_map_icon_dark" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/nom_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Prénom"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/prenom_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Sexe"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/sexe_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tél."
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/phone_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/email_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NULL"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/bouton_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se déconnecter"
                android:layout_margin='20dp'
                android:background="@drawable/rounded_primary_button"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/bouton_delete_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="suprimer compte"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/rounded_white_button"
                    android:layout_weight="1"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatting_btn_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:drawable/ic_menu_edit"
                    android:src="@android:drawable/ic_menu_edit" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>