<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.Activities.ProfileActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_view_profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="30dp"
                android:background="@android:drawable/ic_menu_camera" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_image_profile"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@android:drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/button_video_profile"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@android:drawable/ic_media_play" />

            <Button
                android:id="@+id/button_map_profile"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@android:drawable/ic_dialog_map" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/nom_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nom"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Prénom"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/prenom_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="prenom"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Sexe"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/sexe_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sexe"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tél."
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/phoneNo_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/email_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="None"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">

            <Button
                android:id="@+id/bouton_delete_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="suprimer compte"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rounded_primary_button"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatting_btn_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="30dp"
                android:background="@android:drawable/ic_menu_edit"
                android:src="@android:drawable/ic_menu_edit" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>