<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardView_sampleMenu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="15dp"
    android:elevation="3dp"
    app:cardBackgroundColor="?attr/white"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_sampleMenu"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingHorizontal="7dp"
            android:paddingTop="4dp">


            <TextView
                android:id="@+id/textView_nameSampleMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canard laké au fromage et tarte au pomme de terre foété"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView_priceSampeMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix du menu"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_delete_sampleMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right|bottom"
        android:src="@drawable/ic_delete_icon_dark"
        android:background="@null"
        android:visibility="gone"/>


</androidx.cardview.widget.CardView>