<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.Activities.RegisterActivity"
    android:orientation="vertical"
    android:gravity="center">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp">
        <EditText
            android:id="@+id/editText_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="textPersonName"
            android:lines="1"
            android:hint="Nom"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/controle_nom_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veillez entrer votre nom"
        android:layout_marginLeft="40dp"
        android:textColor="@color/red"
        android:visibility="invisible"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <EditText
            android:id="@+id/editText_prenom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="textPersonName"
            android:lines="1"
            android:hint="Prenom"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/controle_prenom_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veillez entrer votre prenom"
        android:layout_marginLeft="40dp"
        android:textColor="@color/red"
        android:visibility="invisible"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <EditText
            android:id="@+id/editText_pseudo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="textPersonName"
            android:lines="1"
            android:hint="Pseudo"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/controle_pseudo_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exemple : Nasolo@JackSmv"
        android:layout_marginLeft="40dp"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/textView_sexe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sexe"
        android:paddingLeft="30dp"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:labelFor="@+id/radioGroup_sexe"
        />

    <RadioGroup
        android:id="@+id/radioGroup_sexe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        >
        
        <RadioButton
            android:id="@+id/radioButton_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="Homme"
            android:textSize="13sp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioButton_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:freezesText="true"
            android:text="Femme"
            android:textSize="13sp"
            android:layout_marginLeft="20dp"/>
    </RadioGroup>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:lines="1"
            android:inputType="textPassword"
            android:hint="Mot de passe"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/controle_pwd_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Le mot de passe "
        android:layout_marginLeft="20dp"
        android:textColor="@color/red"
        android:visibility="invisible"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/editText_confirm_password"
            android:textSize="20dp"
            android:lines="1"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Confirmer mot de passe"/>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/controle_confirmePwd_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Le mot de passe ne correspond pas"
        android:layout_marginLeft="20dp"
        android:textColor="@color/red"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/button_send"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="envoyer"
        android:layout_gravity="center"
        android:background="@drawable/rounded_primary_button"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>

</LinearLayout>